<h1><i>All Cocktails</i></h1>
<ol>
    <% @cocktails.each do |cocktail| %>
        <% if cocktail.recipes.any? %>
            <li><h4><i><%= link_to cocktail.spirit.name, spirit_recipes_path(cocktail.spirit) %> Cocktails</i></h4>
            <ul>
                <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li><br>
            </ul>
        <% end %>
    <% end %>
</ol>