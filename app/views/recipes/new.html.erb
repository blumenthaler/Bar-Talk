<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <br>
    <%= f.label :garnish %>
    <%= f.text_field :garnish %>
    <br>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <br>
    <%= f.submit "Create Recipe" %>
<% end %>