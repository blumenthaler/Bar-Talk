<%= render partial: "form" %>
<h1>Edit Recipe</h1>

<h2><i>The <%= @recipe.name %> (<%= @recipe.spirit.name %>)</i></h2>

<%= form_for @recipe do |f| %>

    <%= f.hidden_field :name, value: @recipe.name %>
    <%= f.hidden_field :spirit_name, value: @recipe.spirit.name %>
    <br>

    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <br>

    <%= f.label :garnish %>
    <%= f.text_field :garnish %>
    <br>

    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <br>
    
    <%= f.submit "Update Recipe" %>
<% end %>