<h1>Edit Recipe</h1>

<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label(:spirit_name, "Type or Choose a Spirit") %>
    <%= f.text_field(:spirit_name, list: "spirits_autocomplete", value: @cocktail.spirit.name) %>
    <datalist id="spirits_autocomplete">
        <% Spirit.all.each do |s| %>
            <option value="<%= s.name %>">
        <% end %>
    </datalist>
    <br>

    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <br>

    <%= f.label :garnish %>
    <%= f.text_field :garnish %>
    <br>

    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <br>
    
    <%= f.submit "Update Recipe" %>
<% end %>