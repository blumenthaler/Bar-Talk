<h1>Edit Recipe</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label(:spirit, "Type or Choose a Spirit") %>
    <%= f.text_field(:spirit, list: "spirits_autocomplete", value: @cocktail.spirit.name) %>
    <datalist id="spirits_autocomplete">
        <% Spirit.all.each do |s| %>
            <option value="<%= s.name %>">
        <% end %>
    </datalist>
    <br>

    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <br>

    <%= f.label :garnish %>
    <%= f.text_field :garnish %>
    <br>

    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <br>
    
    <%= f.submit "Update Recipe" %>
<% end %>