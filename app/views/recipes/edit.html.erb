<%= render partial: "form" %>
<h1>Edit Recipe</h1>

<h2><i>The <%= @recipe.name %> (<%= @recipe.spirit.name %>)</i></h2>

<%= form_for(@recipe, html: {class: 'form'}) do |f| %>

    <%= f.hidden_field :name, value: @recipe.name %>
    <%= f.hidden_field :spirit_name, value: @recipe.spirit.name %>
    <br>

    <%= f.label(:ingredients, class: "label") %>
    <%= f.text_area(:ingredients, class: "field") %>
    <br>
    <br>
    <br>

    <%= f.label(:garnish, class: "label") %>
    <%= f.text_field(:garnish, class: "field") %>
    <br><br>

    <%= f.label(:notes, class: "label") %>
    <%= f.text_area(:notes, class: "field") %>
    <br><br><br><br>

    <%= f.submit("Update Recipe", class: "submit") %>
<% end %>