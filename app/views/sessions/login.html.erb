<h1>Login Here</h1>

<h4 style="color:red;"><%= flash[:message] if flash[:message] %></h4>

<%= form_tag('/login') do %>
    <%= label_tag "Username" %>
    <%= text_field_tag :username %>
    <br>
    <%= label_tag "Password" %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag "Log In" %>
<% end %>